<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/daily_statistic_Layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="vertical">
        <TextView
            android:id="@+id/achieve_tomato_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/sys_green"
            android:textSize="45dp" />
         <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="完成番茄数"
	            android:textColor="@color/sys_green"
	            android:textSize="15dp" />
		
		</LinearLayout>
		
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/sys_gray"
            android:textSize="60dp" />
		<LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:orientation="vertical">
	        <TextView
	            android:id="@+id/sum_tomato_textView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="30"
	            android:textColor="@color/sys_gray"
	            android:textSize="45dp" />
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="总番茄数"
	            android:textColor="@color/sys_gray"
	            android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
    
	<View  
		android:layout_width="fill_parent"  
		android:layout_height="0.5dp" 
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:background="@color/sys_blue"
	/>
	
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="每日总结"
	    android:gravity="center_vertical"
	    android:textColor="@color/sys_gray"
	    android:textSize="20dp" />
	
    <EditText
        android:id="@+id/des_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

</LinearLayout>